<section class="custom-password-reset">
  <div>
    <div class="text-center mb-3">
      <h2 class="m-2 header-color">Forgot your password?</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post}) do |f| %>
      <div class="d-flex flex-column w-100 p-2">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class= "d-flex flex-column w-100"> 
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100 mb-4 px-4 py-3 rounded-pill", placeholder: "Email"%>

          <%= f.submit "Send me reset password instructions", class: "form-control w-100 mt-4 btn primary-btn py-3 rounded-pill" %>
        </div>
      </div>
    <% end %>
  </div>
</section>