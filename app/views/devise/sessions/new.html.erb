<section class="custom-signin">
  <div>
    <div class="text-center mb-">
      <h2 class="m-2 header-color">Welcome Back!</h2>
      <p class="p-color m-0">Please enter your details here</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="d-flex flex-column w-100 p-2" data-controller="toggle">
      <div class= "d-flex flex-column w-100">
        <%= f.email_field :email, autocomplete: "email", class: "form-control w-100 mb-4 px-4 py-2 rounded-pill", placeholder: "Email" %>
        <div class="form-control d-flex justify-content-between w-100 mb-4 py-2 gap-2 rounded-pill">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-0 px-2 py-1", placeholder: "Password", "data-toggle-target": "unhide" %>
          <button type="button" id="show-pass" data-toggle-target="show" data-action="click->toggle#password" class="border-0 bg-white"><%= image_tag("show.svg", alt: "show")%></button>
        </div>
        <div class="d-flex justify-content-end">
          <%= link_to "Forgot password?", new_password_path(resource_name), class: "header-color" %><br />
        </div>

        <%= f.submit "Log in", class: "form-control w-100 my-4 btn primary-btn py-2 rounded-pill" %>
      </div>
    <% end %>

    <p class="text-center m-0">Donâ€™t have any account?
      <%= link_to "Signup", new_registration_path(resource_name), class: "g-color text-decoration-none ms-2 fs-5" %><br />
    </p>
  </div>
</section>
