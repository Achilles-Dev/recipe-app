<h2 class="text-center my-4">Add Ingredient!</h2>
<%= bootstrap_form_with(model: @recipe_food, url: recipe_recipe_foods_path) do |form| %>
    <%= form.number_field :quantity, step: :any, placeholder: 'Quantity', min: 0, class: "form-control mb-4" %>
    <%= form.collection_select :food_id, @recipe.foods, :id, :name, { include_blank: true }, class: "form-select" %>
    <%= form.submit 'Save Ingredient', class: 'btn btn-primary mt-3' %>
<% end %>