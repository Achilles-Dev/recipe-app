<div class="d-flex justify-content-end">
    <%= link_to 'Add New Inventory', new_inventory_path, class: "btn bg-green mb-3" %>
</div>
<% @inventories.each do |inventory| %>
  <div class="d-flex flex-row justify-content-between card p-3 mb-3">
    <div>
      <h2><%= link_to inventory.name, inventory_path(inventory.id) %></h2>
      <%= button_to 'REMOVE', inventory_path(inventory.id), method: :delete, class: 'btn btn-danger' %>
    </div>
    <p>No description</p>
  </div>
<% end%>
